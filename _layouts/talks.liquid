---
layout: default
---
{%- if page.month -%}
  {%- capture entrymonth -%}{{ " " }}{{ page.month | capitalize }}{%- endcapture -%}
{%- endif -%}
{%- if page.year -%}
  {%- capture entryyear -%}{{ " " }}{{ page.year }}{%- endcapture -%}
{%- endif -%}
{%- if page.venue -%}
  {%- capture entryvenue -%}{{ ": &emsp;" }}{{ page.venue }}{%- endcapture -%}
{%- endif -%}
{%- capture periodical -%}{{ entrymonth }}{{ entryyear }}{{ entryvenue }}{%- endcapture -%}
<div class="periodical" style="display: inline">
  {{ periodical | strip }}
  {%- if page.slides %}
    {% if page.slides contains '://' -%}
      &ensp;<a href="{{ page.slides }}">[Slides]</a>
    {%- else -%}
      &ensp;<a href="{{ page.slides | prepend: '/assets/pdf/' | relative_url }}">[Slides]</a>
    {%- endif %}
  {%- endif %}
  {%- if page.video %}
    &ensp;<a href="{{ page.video }}">[Video]</a>
  {%- endif %}
</div>

